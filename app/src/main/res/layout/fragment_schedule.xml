<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bgr_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#8FEFE2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_schedule"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@+id/bgr_title"
        app:layout_constraintEnd_toEndOf="@+id/bgr_title"
        app:layout_constraintStart_toStartOf="@+id/bgr_title"
        app:layout_constraintTop_toTopOf="@+id/bgr_title" />

    <ImageView
        android:id="@+id/icon_back"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:padding="2dp"
        android:src="@drawable/icon_back2"
        app:layout_constraintBottom_toBottomOf="@+id/tv_schedule"
        app:layout_constraintStart_toStartOf="@id/bgr_title"
        app:layout_constraintTop_toTopOf="@+id/tv_schedule" />

    <com.github.sundeepk.compactcalendarview.CompactCalendarView
        android:id="@+id/compact_calendar_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:compactCalendarCurrentDayBackgroundColor="#BFBFBF"
        app:compactCalendarCurrentSelectedDayBackgroundColor="#8FEFE2"
        app:compactCalendarDisplayOtherMonthDays="false"
        app:compactCalendarShouldSelectFirstDayOfMonthOnScroll="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bgr_title" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/day_present"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/compact_calendar_view" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_schedule"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_date" />
</androidx.constraintlayout.widget.ConstraintLayout>